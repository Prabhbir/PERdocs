<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height= "38mm"
        android:text="Children Section "
        android:id="@+id/button_child"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="true"
        android:textColorHighlight="#fafafa"
        android:onClick="launchChild"
        android:background="#fdf903" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="38mm"
        android:text="Adult Section "
        android:id="@+id/button_Adult"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:layout_alignParentEnd="true"
        android:onClick="launchAdults"
        android:background="#a80303"
        android:textColorHint="#ffffff" />

</RelativeLayout>
