<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ali.myapplication.KidSection"
    tools:showIn="@layout/activity_kid_section"
    android:background="#006699">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/WelcomeScreenKidsSection"
        android:id="@+id/textView"
        android:textColor="#ffdd00"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:background="@drawable/sample"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="@string/CategoriesButton"
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:onClick="welcomeKS"/>

    <Button
        android:background="@drawable/sample"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="@string/GamesButton"
        android:id="@+id/button2"
        android:textSize="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button"
        android:onClick="welcomeKS"/>

</RelativeLayout>
